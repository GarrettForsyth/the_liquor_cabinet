<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.games.garrett.theliquorcabinet.activities.LiquorLogActivity"
    tools:showIn="@layout/activity_liquor_logs">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="@dimen/card_marginBottom"
        android:baselineAligned="false"
        android:orientation="vertical">

        <include
            android:id="@+id/like_card"
            layout="@layout/card_rating"/>

        <include
            android:id="@+id/dislike_card"
            layout="@layout/card_rating"/>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
